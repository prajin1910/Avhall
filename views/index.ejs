/* Footer Styles */
.footer {
  margin-top: 2rem;
  padding: 1rem 0;
  text-align: center;
  width: 100%;
  color: var(--text-secondary);
  font-size: 0.9rem;
  border-top: 1px solid var(--border-color);
}

.footer p {
  margin: 0.5rem 0;
}

.footer a {
  color: var(--primary-color);
  text-decoration: none;
  transition: color 0.2s;
